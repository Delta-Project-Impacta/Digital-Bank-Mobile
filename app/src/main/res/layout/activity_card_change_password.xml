<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_Change_Password_Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.activities.CardChangePasswordActivity">
    
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/card_Change_Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_toolbar"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/card_Change_Password_Arrow_Back"
            android:layout_width="36dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginEnd="50dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/card_change_password_title"
            android:textColor="@color/white" />

    </com.google.android.material.appbar.MaterialToolbar>

    <TextView
        android:id="@+id/card_Change_Password_Description_01_View"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/card_change_password_description_01"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_Change_Password" />

    <TextView
        android:id="@+id/card_Change_Password_Description_02_View"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"

        android:text="@string/card_change_password_description_02"
        android:textAlignment="center"
        android:textColor="@color/grey"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_Change_Password_Description_01_View" />



    <LinearLayout
        android:id="@+id/card_Change_Password_Linear_Layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:dividerPadding="12dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:showDividers="middle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_Change_Password_Description_02_View">

        <EditText
            android:id="@+id/otp_1"
            style="@style/OtpInputStyle"
            android:layout_marginEnd="16dp" />

        <EditText
            android:id="@+id/otp_2"
            style="@style/OtpInputStyle"
            android:layout_marginEnd="16dp" />

        <EditText
            android:id="@+id/otp_3"
            style="@style/OtpInputStyle"
            android:layout_marginEnd="16dp" />

        <EditText
            android:id="@+id/otp_4"
            style="@style/OtpInputStyle" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/card_Change_Password_Button_Next"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="54dp"
        android:background="@drawable/bg_button_primary"

        android:text="@string/card_change_password_button"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    
</androidx.constraintlayout.widget.ConstraintLayout>