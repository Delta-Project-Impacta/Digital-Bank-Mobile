<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_home_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"

            app:itemActiveIndicatorStyle="@style/Custom.ActiveIndicator"
            app:itemBackground="@drawable/bottom_nav_item_background"
            app:itemIconSize="32dp"
            app:itemIconTint="@color/bottom_nav_icon_tint"
            app:itemPaddingBottom="6dp"
            app:itemPaddingTop="6dp"
            app:itemTextColor="@color/bottom_nav_text_color"

            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_home_navigation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>



    </LinearLayout>
</LinearLayout>