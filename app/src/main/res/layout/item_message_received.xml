<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/messageLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/botAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_chat_bot"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_circle_chat_bot"
            android:padding="10dp" />

        <TextView
            android:id="@+id/botName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chat_bot_name"
            android:textSize="12sp"
            android:fontFamily="@font/font_sans_medium"
            android:textColor="@color/chatbot_name"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/textMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chat_bot_msg_received"
            android:textColor="@color/grey"
            android:fontFamily="@font/font_sans"
            android:padding="12dp"
            android:maxWidth="280dp"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="start"
            android:background="@drawable/bg_button_primary"
            android:fontFamily="@font/font_sans_semibold"
            android:text="@string/chat_button_reset_password"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>