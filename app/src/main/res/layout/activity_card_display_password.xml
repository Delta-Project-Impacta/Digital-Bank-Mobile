<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_Display_Password_Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.activities.CardDisplayPasswordActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/card_Display_Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_toolbar"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/card_Display_Password_Arrow_Back"
            android:layout_width="36dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:text="@string/card_display_password_title"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </com.google.android.material.appbar.MaterialToolbar>

    <TextView
        android:id="@+id/card_Display_Password_TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"

        android:text="@string/card_display_password_description"
        android:textAlignment="center"
        android:textColor="@color/grey"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_Display_Password" />

    <LinearLayout
        android:id="@+id/card_Display_Password_Dot_Input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="72dp"
        android:dividerPadding="12dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:showDividers="middle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_Display_Password_TextView">

        <EditText
            android:id="@+id/dot_Input_1"
            style="@style/PinInputStyle"
            android:layout_marginEnd="16dp" />

        <EditText
            android:id="@+id/dot_Input_2"
            style="@style/PinInputStyle"
            android:layout_marginEnd="16dp" />

        <EditText
            android:id="@+id/dot_Input_3"
            style="@style/PinInputStyle"
            android:layout_marginEnd="16dp" />

        <EditText
            android:id="@+id/dot_Input_4"
            style="@style/PinInputStyle" />
    </LinearLayout>

    <TextView
        android:id="@+id/card_Display_Password_Bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="54dp"
        android:clickable="true"
        android:drawableStart="@drawable/ic_eye"
        android:drawablePadding="15dp"
        android:drawableTint="@color/grey"
        android:focusable="true"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        android:text="@string/card_display_password_bottom"
        android:textColor="@color/grey"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>