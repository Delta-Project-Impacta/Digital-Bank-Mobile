<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.activities.ResetPasswordActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/reset_Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_toolbar"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/reset_Password_Arrow_Back"
            android:layout_width="36dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginEnd="50dp"
            android:textSize="18sp"
            android:fontFamily="@font/font_sans_bold"
            android:text="@string/reset_password_header"
            android:textColor="@color/white" />

    </com.google.android.material.appbar.MaterialToolbar>

    <ImageView
        android:id="@+id/reset_Password_Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:src="@drawable/ic_reset_password"
        app:layout_constraintTop_toBottomOf="@id/reset_Password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/reset_Password_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/reset_password_title"
        android:textAlignment="center"
        android:textSize="25sp"
        android:fontFamily="@font/font_sans_bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/reset_Password_Icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/reset_Password_Text_Description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="@string/reset_password_description"
        android:textColor="@color/black"
        android:fontFamily="@font/font_sans"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/reset_Password_Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/reset_Password_Input_New_Password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="38dp"
        app:endIconMode="none"
        app:endIconDrawable="@drawable/ic_check"
        app:endIconTint="@color/orange"
        app:hintTextColor="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/reset_Password_Text_Description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/reset_Password_Edit_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input_primary"
            android:drawableEnd="@drawable/ic_eye"
            android:hint="@string/reset_password_input_01"
            android:fontFamily="@font/font_sans"
            android:textSize="13sp"
            android:textColor="@color/dark_grey" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/reset_Password_Input_New_Password_Confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="12dp"
        app:endIconMode="none"
        app:endIconDrawable="@drawable/ic_check"
        app:endIconTint="@color/orange"
        app:hintTextColor="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/reset_Password_Input_New_Password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/reset_Password_Edit_Password_Confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input_primary"
            android:drawableEnd="@drawable/ic_eye"
            android:hint="@string/reset_password_input_02"
            android:fontFamily="@font/font_sans"
            android:textSize="13sp"
            android:textColor="@color/dark_grey" />

    </com.google.android.material.textfield.TextInputLayout>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/reset_Password_Button_Next"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_primary"
        android:text="@string/reset_password_button"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/font_sans"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="54dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>