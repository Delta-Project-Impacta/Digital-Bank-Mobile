<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Delta.Light" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="BottomNav.TextAppearance.Inactive" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/font_sans</item>
        <item name="fontFamily">@font/font_sans</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNav.TextAppearance.Active" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/font_sans_bold</item>
        <item name="fontFamily">@font/font_sans_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Custom.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
    </style>

    <style name="OtpInputStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:background">@drawable/bg_otp_underline</item>
    </style>

    <style name="PrefixTextStyle">
        <item name="android:fontFamily">@font/bradesco_sans_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="PinInputStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">52sp</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:hint">‚óè</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="PixSuccessItemLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PixSuccessItemValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">16sp</item>
      </style>
</resources>